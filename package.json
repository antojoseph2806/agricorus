{
  "name": "agricorus",
  "version": "1.0.0",
  "description": "Academic project with automated testing",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test:api": "cross-env NODE_ENV=test mocha tests/api --timeout 5000",
    "test:auth": "cross-env NODE_ENV=test mocha tests/api/auth.test.js --timeout 5000",
    "test:unit": "cross-env NODE_ENV=test jest",
    "test:ui": "cross-env NODE_ENV=test node tests/ui/login.test.js",
    "test": "npm run test:api && npm run test:unit && npm run test:ui"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "chai": "^6.2.0",
    "cross-env": "^7.0.3",
    "jest": "^30.2.0",
    "mocha": "^11.7.2",
    "selenium-webdriver": "^4.35.0",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "jsdom"
  }
}
